<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.playpalgames.app.StartActivity">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Launch"
        android:id="@+id/launchButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Game"
        android:id="@+id/createKicksGameButton"
        android:layout_alignTop="@+id/launchButton"
        android:layout_toRightOf="@+id/launchButton" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="localServer"
        android:id="@+id/serverCheckbox"

        android:checked="false"
        android:layout_toEndOf="@+id/createKicksGameButton"
        android:layout_alignBaseline="@+id/createKicksGameButton"
        android:layout_alignBottom="@+id/createKicksGameButton"
        android:layout_toRightOf="@+id/createKicksGameButton" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/logTextView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/serverCheckbox"
        android:ellipsize="marquee"
        android:gravity="bottom"
        android:maxLines="20"
        android:scrollbars="vertical"
        android:background="#77000000"
        android:autoText="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PK!"
        android:id="@+id/pkCheckbox"
        android:layout_toEndOf="@+id/serverCheckbox"
        android:checked="false"
        android:layout_toRightOf="@+id/serverCheckbox"
        android:layout_alignBaseline="@+id/createKicksGameButton"
        android:layout_alignBottom="@+id/createKicksGameButton" />

</RelativeLayout>
