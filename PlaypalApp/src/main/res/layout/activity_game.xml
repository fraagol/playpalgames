<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.playpalgames.app.game.GameActivity"
    android:background="@drawable/penalty">


    <TextView
        android:id="@+id/questionText"
        android:layout_width="fill_parent"
        android:layout_height="100dp"

        android:gravity="bottom"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:background="#77000000"
        android:maxLines="3"
        android:layout_above="@+id/bottomLinearLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/bottomLinearLayout"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" >


        <Button
            android:id="@+id/leftButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Izquierda"
/>

        <Button
            android:id="@+id/rightButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/leftButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="Derecha" />


        </LinearLayout>



    <TextView
        android:id="@+id/logTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bottomLinearLayout"
        android:ellipsize="marquee"
        android:gravity="bottom"

        android:scrollbars="vertical"
        android:background="#77000000"
        android:autoText="false"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:id="@+id/linearLayout"
        android:gravity="center_horizontal"
        >

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/scoreTable"
            android:layout_below="@+id/scoreP1Text"

            android:layout_gravity="center"
            android:background="#77000000">

            <TableRow
                android:id="@+id/headerRow"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:showDividers="beginning|middle|end">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:width="40dp"

                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:width="40dp"

                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    />
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:width="40dp"
                    android:text="1"
                    android:textAppearance="?android:attr/textAppearanceMedium">

                </TextView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:width="40dp"
                    android:gravity="center"
                    android:text="2"
                    android:textAppearance="?android:attr/textAppearanceMedium">

                </TextView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:width="40dp"
                    android:gravity="center"
                    android:text="3"
                    android:textAppearance="?android:attr/textAppearanceMedium">

                </TextView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:width="40dp"
                    android:gravity="center"
                    android:text="4"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    >

                </TextView>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:width="40dp"
                    android:text="5"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    >

                </TextView>

            </TableRow>



            <TableRow
                android:id="@+id/scoreP1Row"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TÃº"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    >

                </TextView>
                <TextView
                    android:id="@+id/scoreP1Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>

            <TableRow android:id="@+id/scoreP2Row">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rival "
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    >

                </TextView>

                <TextView
                    android:id="@+id/scoreP2Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="0"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>
